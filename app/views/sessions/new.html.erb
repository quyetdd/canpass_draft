<% provide(:title, "Sign in") %>
<% if flash[:error] %>
  <p><span class="notification"><%= flash[:error] %></span></p>
<% end %>
<% if signed_in? %>
  Welcome to Canpass
<% else %>
  <h1>Sign in</h1>
  <div class="row">
    <div class="span6 offset3">
      <%= form_for(:session, url: sessions_path) do |f| %>
        <%= f.label "Email" %>
        <%= f.text_field :email %>
        <%= f.label "Password" %>
        <%= f.password_field :password %>
        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
